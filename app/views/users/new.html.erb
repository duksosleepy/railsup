<div class="flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-lg">
    <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
t(".title")
 %>
    </h1>
  </div>
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
form_with(model: @user, url: sign_up_path, class: "space-y-6")
 do |form| %>
        <div class="form-group">
form.label :name, t("activerecord.attributes.user.name"), class: "label"
 %>
form.text_field :name, class: "input", id: "user_name", name: "user[name]"
 %>
        </div>
        <div class="form-group">
form.label :email, t("activerecord.attributes.user.email"), class: "label"
 %>
form.email_field :email, class: "input", id: "user_email", name: "user[email]"
 %>
        </div>
        <div class="form-group">
form.label :password, t("activerecord.attributes.user.password"), class: "label"
 %>
form.password_field :password, class: "input", id: "user_password", name: "user[password]"
 %>
        </div>
form.submit t(".sign_up"), class: "btn-primary w-full"
 %>
      <% end %>
    </div>
  </div>
</div>
